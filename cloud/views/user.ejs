                        <input type="text" class="form-control" name="text" id="commentText">
                        <br>
                        <button id="commentSub" class="btn btn-primary" type="button"
                                onclick="commentFn('<%= postSelected.attributes.author+'/'+postSelected.id %>')">Comment
                        </button>
